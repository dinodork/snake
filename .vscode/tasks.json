{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CheckAssembler",
            "type": "shell",
            "command": "sjasmplus --version",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "CreateBuildDirectory",
            "type": "shell",
            "command": "mkdir -p ${config:buildPath} ${config:buildPath}/graphics",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "CheckAssembler"
            ],
        },
        {
            "label": "GenerateFontAsm",
            "type": "process",
            "linux": {
                "command": "/usr/bin/python3",
                "args": [
                    "scripts/graphics_to_asm.py",
                    "-W1",
                    "${workspaceFolder}/submodules/zx-fonts/countdown_sh.fnt",
                    "-o${config:buildPath}/graphics/font.asm",
                    "-lFont"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "CreateBuildDirectory",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "GenerateGraphicsAsm",
            "type": "process",
            "linux": {
                "command": "/usr/bin/python3",
                "args": [
                    "scripts/graphics_to_asm.py",
                    "-W1",
                    "${workspaceFolder}/graphics/snake_frames.udg",
/*
   There is a bug in the ZXGraphics Editor preventing it from understanding any
   other file sizes for graphics except exactly 21 8x8 blocks. Hence we have to
   divide the graphics into two files.
*/
                    "${workspaceFolder}/graphics/environment_frames.udg",
                    "-o${config:buildPath}/graphics/snake_frames.asm",
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "CreateBuildDirectory",
            ],
        },
        {
            "label": "Make(sjasmplus)",
            "type": "shell",
            "command": "sjasmplus", // Please add the full path to sjasmplus
            "args": [
                "--outprefix=${config:buildPath}/",
                "--sld=${config:buildPath}/${config:projectName}.sld",
                "--fullpath",
                "-I${workspaceFolder}",
                "${workspaceFolder}/src/main.asm",
            ],
            "problemMatcher": {
                "owner": "sjasmplus",
                "fileLocation": "autoDetect",
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                },

            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CheckAssembler"
                "CreateBuildDirectory",
                "GenerateFontAsm",
                "GenerateGraphicsAsm",
            ],
        },
    ]
}
